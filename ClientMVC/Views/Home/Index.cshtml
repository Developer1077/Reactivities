@{
    Layout = "";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Client</title>
    @*<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">*@
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
    <link href="~/lib/toastr.js/toastr.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
   
</head>
<body class="masthead container">
    <div class="row" style="margin-top:200px">

        <div class=" col  text-center">
            <div class="text-light" style="font-size:80px">
                <img src="~/images/logo.png" alt="logo" class="pb-2" />
                Reactivities

            </div>
        </div>
    </div>
    <div class="row">

        <div class="col text-center">
            <h3 class="text-light">
                Welcome to Reactivities
            </h3>
        </div>
    </div>
    <br />
    
    <div class="text-center">
        <a class="btn btn-outline-light pt-2 mr-4" asp-controller="account" asp-action="login"><h5>Login</h5></a>
        <a class="btn btn-outline-light pt-2" asp-controller="account" asp-action="register"><h5>Register</h5></a>
    </div>
    

    <script src="~/lib/jquery/jquery-3.5.1.min.js"></script>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/font-awesome/js/all.js"></script>
    <partial name="_ValidationScriptsPartial" />

    @await Component.InvokeAsync("NToastNotify")

</body>
</html>
